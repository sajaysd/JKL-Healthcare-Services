@inject JKLHealthcareSystem.Helpers.SessionHelper SessionHelper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">JKL Healthcare</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (SessionHelper.IsLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Patients/Index">Patients</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link" href="/Caregivers/Index">Caregivers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Appointments">Appointments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        @RenderBody()
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
