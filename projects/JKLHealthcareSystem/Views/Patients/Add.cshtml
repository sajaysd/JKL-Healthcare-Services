@model JKLHealthcareSystem.Models.Patient

@{
    ViewData["Title"] = "Add Patient";
}

<div class="container mt-5">
    <h2 class="text-center">Add New Patient</h2>
    <form method="post" asp-action="Add" class="card p-4 shadow-lg">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="Name" class="form-control" value="@Model?.Name" required />
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" id="address" name="Address" class="form-control" value="@Model?.Address" required />
        </div>
        <div class="mb-3">
            <label for="medicalRecords" class="form-label">Medical Records</label>
            <textarea id="medicalRecords" name="MedicalRecords" class="form-control">@Model?.MedicalRecords</textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Add Patient</button>
    </form>
</div>
